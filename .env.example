# ========================================
# CONFIGURACIÓN DE DJANGO
# ========================================
SECRET_KEY=django-insecure-cambiar-en-produccion
DEBUG=False
ALLOWED_HOSTS=.railway.app,localhost,127.0.0.1,0.0.0.0

# URL base de la aplicación (importante para Mercado Pago)
BASE_URL=https://tu-app.railway.app

# Orígenes de confianza para CSRF
CSRF_TRUSTED_ORIGINS=https://tu-app.railway.app

# Cookies seguras (True en producción HTTPS, False en desarrollo HTTP)
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ========================================
# BASE DE DATOS
# ========================================
# Railway provee DATABASE_URL automáticamente al crear un servicio PostgreSQL
# No necesitas configurar estas variables si usas Railway PostgreSQL
DATABASE_URL=

# Variables alternativas (si no usas DATABASE_URL)
DB_NAME=tienda_perfumes
DB_USER=postgres
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=5432

# Usar SQLite en desarrollo local (opcional)
USE_SQLITE=False

# ========================================
# MERCADO PAGO
# ========================================
MERCADO_PAGO_ACCESS_TOKEN=
MERCADO_PAGO_PUBLIC_KEY=

# ========================================
# GOOGLE MAPS (OPCIONAL)
# ========================================
GOOGLE_MAPS_API_KEY=

# ========================================
# CORREO ELECTRÓNICO (EMAIL)
# ========================================
# Configuración para enviar emails de recuperación de contraseña y notificaciones
# Por defecto usa Gmail (requiere contraseña de aplicación, no contraseña normal)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-contrasena-de-aplicacion
DEFAULT_FROM_EMAIL=tu-email@gmail.com

# Alternativas:
# - Para Outlook: smtp.outlook.com (puerto 587 o 25)
# - Para Yahoo: smtp.mail.yahoo.com (puerto 465 o 587)
# - Para otros: consulta la documentación del proveedor

